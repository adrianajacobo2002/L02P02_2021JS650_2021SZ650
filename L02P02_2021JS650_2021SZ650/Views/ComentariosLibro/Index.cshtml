                    <h5>Libro</h5>
                </div>
                <div class="col-md-3">
                    @Html.Label("lblLibroSelec", "Nombre del Libro Seleccionado")
                </div>
            </div>
        </div>
    </div>

    <div class="row py-5">
        <div class="col-md-6">
            <h5>Comentarios Existentes</h5>
            <div class="">
                <div class="card" style="width: contain;">
                    <ul class="list-group list-group-flush">

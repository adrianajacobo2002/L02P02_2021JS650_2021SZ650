            <h5>Agregar un Comentario</h5>
            <small>Comentario</small>
            @Html.TextArea("Comentarios", "", new { @class = "form-control", id = "idComentarios", style = "min-height: 150px;" })
            <div class="py-2">
                <div class="card">
                    <div class="card-body p-1">
                        <button type="button" class="btn btn-success w-100">Guardar Comentario</button>
                    </div>
                </div>
            </div>
        </div>
